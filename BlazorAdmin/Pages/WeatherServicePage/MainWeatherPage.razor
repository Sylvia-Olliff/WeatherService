@page "/weather"
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.WeatherServicePage

<PageTitle>Weather Service: Select Location</PageTitle>

<EditForm Model="CurrentLocation" OnInvalidSubmit="@ResolveLocation">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    <label class="control-label col-md-6">City</label>
                    <div class="col-md-12">
                        <InputText class="form-control" @bind-Value="CurrentLocation.City" />
                        <ValidationMessage For="(() => CurrentLocation.City)" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-6">State Code</label>
                    <div class="col-md-12">
                        <InputText class="form-control" @bind-Value="CurrentLocation.StateCode" />
                        <ValidationMessage For="(() => CurrentLocation.StateCode)" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-6">Country Code</label>
                    <div class="col-md-12">
                        <InputText class="form-control" @bind-Value="CurrentLocation.Country" />
                        <ValidationMessage For="(() => CurrentLocation.Country)" />
                    </div>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group">
                    <label class="control-label col-md-6">Zip Code</label>
                    <div class="col-md-12">
                        <InputText class="form-control" @bind-Value="CurrentLocation.ZipCode" />
                        <ValidationMessage For="(() => CurrentLocation.ZipCode)" />
                    </div>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group">
                    <label class="control-label col-md-6">Latitude</label>
                    <div class="col-md-12">
                        <InputNumber class="form-control" @bind-Value="CurrentLocation.Latitude" />
                        <ValidationMessage For="(() => CurrentLocation.Latitude)" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-6">Longitude</label>
                    <div class="col-md-12">
                        <InputNumber class="form-control" @bind-Value="CurrentLocation.Longitude" />
                        <ValidationMessage For="(() => CurrentLocation.Longitude)" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

<View @ref="ViewComponent"></View>
